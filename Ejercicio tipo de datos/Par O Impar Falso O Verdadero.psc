Algoritmo ParOImparVerdaderoOFalso
  
    Definir Numero Como Entero;
    
    Escribir "Ingrese un número entero:";
    Leer Numero;
    
    Si (Numero MOD 2) = 0 Entonces
        
        Escribir "El número ", Numero, " es par. Resultado: Verdadero";
        
    SiNo
        
        Escribir "El número ", Numero, " es impar. Resultado: Falso";
        
    FinSi
    
FinAlgoritmo